<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/New_Keep"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".views.NewKeep">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<EditText
				android:id="@+id/New_Keep_Titre"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:cursorVisible="false"
				android:inputType="textPersonName"
				android:textStyle="bold"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				tools:layout_editor_absoluteY="3dp" />

			<EditText
				android:id="@+id/New_Keep_Texte"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/New_Keep_Titre"
				android:layout_marginTop="10dp"
				android:ems="10"
				android:inputType="textMultiLine"
				android:scrollbars="vertical" />

			<Button
				android:id="@+id/New_Keep_New_Date"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/New_Keep_Texte"
				android:text="Ajouter une date"
				android:layout_marginTop="50dp"/>

			<TextView
				android:id="@+id/New_Keep_Date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/New_Keep_New_Date"
				android:textStyle="bold"
				android:textSize="30dp"
				android:gravity="center"
				android:layout_marginTop="10dp" />

			<Button
				android:id="@+id/New_Keep_Image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/New_Keep_Date"/>

			<ImageView
				android:id="@+id/New_Image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/New_Keep_Image"
				android:layout_marginTop="50dp" />

			<Button
				android:id="@+id/New_Keep_Save"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/New_Image"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="50dp"
				android:textAlignment="center" />
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>